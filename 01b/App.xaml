<Application x:Class="_01b.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:_01b"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- 색상 리소스 정의 -->
        <Color x:Key="MainBlueColor">#007AFF</Color>
        <Color x:Key="DarkBlueColor">#4e5761</Color>

        <!-- 브러쉬 리소스 정의 -->
        <SolidColorBrush x:Key="MainBlueBrush" Color="{StaticResource MainBlueColor}"/>
        <SolidColorBrush x:Key="DarkBlueBrush" Color="{StaticResource DarkBlueColor}"/>
    </Application.Resources>
</Application>
